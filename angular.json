{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-spectre": {
      "root": "projects/angular-spectre",
      "sourceRoot": "projects/angular-spectre/src",
      "projectType": "library",
      "prefix": "ngs",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/angular-spectre/tsconfig.lib.json",
            "project": "projects/angular-spectre/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "projects/angular-spectre/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/angular-spectre/src/test.ts",
            "tsConfig": "projects/angular-spectre/tsconfig.spec.json",
            "karmaConfig": "projects/angular-spectre/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/angular-spectre/tsconfig.lib.json",
              "projects/angular-spectre/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "spectre-demo": {
      "root": "projects/spectre-demo/",
      "sourceRoot": "projects/spectre-demo/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/spectre-demo",
            "index": "projects/spectre-demo/src/index.html",
            "main": "projects/spectre-demo/src/main.ts",
            "polyfills": "projects/spectre-demo/src/polyfills.ts",
            "tsConfig": "projects/spectre-demo/tsconfig.app.json",
            "assets": [
              "projects/spectre-demo/src/favicon.ico",
              "projects/spectre-demo/src/assets"
            ],
            "styles": [
              "dist/angular-spectre/styles/index.css",
              "projects/spectre-demo/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/spectre-demo/src/environments/environment.ts",
                  "with": "projects/spectre-demo/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "spectre-demo:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "spectre-demo:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "spectre-demo:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/spectre-demo/src/test.ts",
            "polyfills": "projects/spectre-demo/src/polyfills.ts",
            "tsConfig": "projects/spectre-demo/tsconfig.spec.json",
            "karmaConfig": "projects/spectre-demo/karma.conf.js",
            "styles": [
              "projects/spectre-demo/src/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "projects/spectre-demo/src/favicon.ico",
              "projects/spectre-demo/src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/spectre-demo/tsconfig.app.json",
              "projects/spectre-demo/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "angular-spectre"
}
